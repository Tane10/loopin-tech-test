{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": true,
      "removeComments": true,
      "outDir": "dist",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
    "exclude": [],
    "include": [
      "./app/**/*",
      "./spec/**/*"
    ]
  }
}